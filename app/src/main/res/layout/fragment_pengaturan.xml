<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fab60b"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publicload.ui.pengaturan.PengaturanFragment">

    <androidx.appcompat.widget.Toolbar
        android:background="#fab60b"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">



        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backPengaturan"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:padding="10dp"
                android:src="@drawable/reply" />

            <TextView
                android:layout_weight="28"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="PENGATURAN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="17dp"/>

            <ImageView
                android:id="@+id/checklistPengaturan"
                android:layout_weight="2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="start"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/checkmark" />








        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#43FFFFFF"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_weight="49.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:tint="#dad9d5"
                    android:src="@drawable/image"
                    android:layout_width="50dp"
                    android:layout_height="90dp"/>

                <TextView
                    android:text="Profile Picture"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:background="#A4FFFFFF"
                android:layout_weight="1"
                android:layout_width="0.1dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="49.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/photo"
                    android:layout_width="50dp"
                    android:layout_height="90dp"/>

                <TextView
                    android:text="Cover Picture"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>